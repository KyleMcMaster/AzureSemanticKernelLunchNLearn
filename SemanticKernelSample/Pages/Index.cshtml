@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

@if(!Model.ChatHistory.Any())
{
    <div class="text-center text-light">
        <h1 class="display-4">Welcome</h1>
        <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    </div>
    
}

@if(Model.ChatHistory.Any())
{
    <div class="container bg-dark text-light pb-4">
        <div class="row">
            <div class="col-md-6">
                <h2>Chat History</h2>
                <ul class="list-group bg-dark text-light"></ul>
                @foreach (var chat in Model.ChatHistory)
                {
                    <li class="list-group-item bg-dark text-light border-light">@chat</li>
                }
            </div>
        </div>
    </div>
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>Chat</h2>
            <form method="post">
                <div class="form-group">
                    <input type="text" class="form-control" name="message" />
                </div>
                <button type="submit" class="btn btn-primary">Send</button>
            </form>
        </div>
    </div>
</div>